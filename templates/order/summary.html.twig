{% extends 'base.html.twig' %}


{% block body %}   
    <div class="container my-5">
         <h1 class="mb-5">RÃ©capitulatif de ma commande</h1>     
        <div class="row">
            <div class="col-md-8">
              <div class="bg-light p-3"> 
                    <strong> Contenu de mon panier </strong><br/>
                    {% for product in cart %}
                            <div class="row mt-2">
                                <div class="col-md-2">
                                    <img src="/uploads/{{ product.object.illustration }}" class="img-fluid" alt="{{ product.object.name }}">
                                </div>
                                <div class="col-md-6">
                                    <strong>{{ product.object.name }}</strong>
                                    <span class="d-block small">Prix unitaire : {{product.object.pricewt| price }}</span>
                                </div>
                                <div class="col-md-2 text-right">
                                    <span class="badge text-bg-secondary">   x {{ product.qty }}</span> 
                                </div>
                                <div class="col-md-2">
                                    <strong>{{ (product.qty * product.object.pricewt) | price }}</strong>
                                </div>
                            </div>
                        {% endfor %}
                </div>
               
                <div class="bg-light p-3 mt-4">

                    <strong>Votre adresse de livraison</strong><br/>
                    {{ choices.adresses.firstname}}{{ choices.adresses.lastname}} <br/>
                    {{ choices.adresses.adress}}<br/>
                    {{ choices.adresses.city}} - {{ choices.adresses.country}}

                </div>
     

                <div class="bg-light p-3 mt-4">

                    <strong>Choix du transporteur pour la livraison</strong><br/>
                    {{ choices.carriers.name}}<br/>
                    {{ choices.carriers.description}}<br/>
      
                </div>

            </div>
            <div class="col-md-4">
                <div class="bg-light p-3">
                    {# <div class="d-flex justify-content-between">
                         <span class="fw-bold"> Total produit : </span>   
                         <span>{{ totalWt | price}} </span>
                    </div> #}
                      <div div class="d-flex justify-content-between mt-3">
                         <span class="fw-bold"> Total transporteur : </span>   
                         <span>{{ choices.carriers.price | price}} </span>
                        </div>
                      <div div class="d-flex justify-content-between mt-3">
                         <span class="fw-bold"> Total commande : </span>   
                          <span>{{ (totalWt + choices.carriers.price)  | price}} </span>
                        </div>
                    <div class="mt-4">
                        <a href="{{ path('app_order')}}" class="btn btn-success w-100">Payer</a>
                    </div>
                </div>
               
            </div>
        </div>
    
    </div>

{% endblock %}

